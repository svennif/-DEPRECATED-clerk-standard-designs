{% assign __design__shop_title = 'Clerk.io' %}

{% assign __design__shop_domain = 'https://www.clerk.io' %}
{% assign __design__shop_privacy_policy = 'https://help.clerk.io/help/gdpr/gdpr/' %}
{% assign __design__shop_rel_url_home = '/home' %}
{% assign __design__shop_rel_url_blog = '/blog' %}
{% assign __design__shop_rel_url_store = '/store' %}

{% assign __design__api_key = '' %}
{% assign __design__social_facebook_url = '' %}
{% assign __design__social_youtube_url = '' %}
{% assign __design__social_instagram_url = '' %}
{% assign __design__social_twitter_url = '' %}
{% assign __design__social_google_url = '' %}
{% assign __design__social_pinterest_url = '' %}
{% assign __design__social_tumblr_url = '' %}
{% assign __design__social_linkedin_url = '' %}
{% if input_shop_logo_image_url == null %}{% assign input_shop_logo_image_url = 'https://global-uploads.webflow.com/63357df7224a8a49353f3636/63381c44a918c228b61fd12e_Logo.svg' %}{% endif %}
{% if input_banner_image == null %}{% assign input_banner_image = 'https://assets-global.website-files.com/63357df7224a8a49353f3636/635560bbe41031b0fd7bcd10_lifecycle.svg' %}{% endif %}
{% if input_headline == null %}{% assign input_headline = 'Example Headline' %}{% endif %}
{% if input_text_long == null %}{% assign input_text_long = 'Lorem ipsum dolor sit amet, consectetur adipiscing elit. Cras pretium magna et urna fringilla convallis. Nullam non urna scelerisque, posuere diam ut, pretium ante. Donec elementum risus et nibh pellentesque accumsan. ' %}{% endif %}
{% if input_bottom_banner_image == null %}{% assign input_bottom_banner_image = 'https://assets-global.website-files.com/63357df7224a8a49353f3636/635560bbe41031b0fd7bcd10_lifecycle.svg' %}{% endif %}

